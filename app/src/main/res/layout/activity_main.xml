<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.howell.activity.MainActivity"
    android:background="@color/main_bk">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true">
        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/main_btn_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_entry"
            style="?android:textAppearanceSmall"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/main_btn"
            />
        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_btn_push"
            android:text="@string/main_push"
            style="?android:textAppearanceSmall"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/main_btn"
            />

        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_btn_test"
            android:text="text"
            android:textColor="@color/textColor"

            />

    </LinearLayout>






</RelativeLayout>